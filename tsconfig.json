{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": { // 或 "module": "ES6"
    "target": "ESNext",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@config": ["src/config.ts"],
      "@interfaces/*": ["src/interface/*"],
      "@lib/*": ["src/lib/*"]
    },
    "strict": true, // 或 "target": "ES6"
    "esModuleInterop": true
  }
}
